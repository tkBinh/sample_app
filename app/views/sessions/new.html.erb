<% provide :title, t(".login_title") %>
<h1><%= t ".login_title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label t(".label_email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t(".label_password") %>
      <%= link_to t(".forgot_pass"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
        <span><%= t ".span_rmb_me" %></span>
      <% end %>

      <%= f.submit t(".login_title"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t ".new_user" %><%= link_to t(".sing_up_now"), signup_path %></p>
  </div>
</div>
