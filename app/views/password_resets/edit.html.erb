<% provide :title, t(".title_reset_pass") %>
<h1><%= t(".title_reset_pass") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: password_reset_path params[:id] do |f| %>
      <%= render "shared/error_messages" %>

      <%= hidden_field_tag t("new.label_email_fp"), @user.email %>

      <%= f.label t(".label_password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t(".cf_pass") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t(".submit_u_pass"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
